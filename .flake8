[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    migrations
per-file-ignores =
    __init__.py:F401
    test_*.py:D100,D101,D102,D103
    conftest.py:D100,D101,D102,D103